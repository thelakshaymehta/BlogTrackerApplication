@model IEnumerable<DataAccessLayer.BlogInfo>
@{
    ViewBag.Title = "Home Page";
}

<main>

    <center><header><h1>List of Blogs</h1></header></center>
    <div class="row">
        @foreach (var item in Model)
        {

            <section class="col-md-6" aria-labelledby="gettingStartedTitle" style="margin-bottom:10px; ">
                <div class="inner" style="border: 2px solid grey; padding: 10px;">
                    <h3 id="gettingStartedTitle">@item.Title - By @item.EmpEmailId</h3>
                    <p>Date : @item.DateOfCreation.ToString("dd-MMM-yyyy")</p>
                    <p>Subject :@item.Subject</p>
                    <p><a class="btn btn-primary btn-md" href="@item.BlogUrl" >@item.BlogUrl</a></p>
                </div>
            </section>
        }
    </div>


</main>